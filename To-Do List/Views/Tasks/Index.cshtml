<!-- Index.cshtml -->
@model IEnumerable<To_Do_List.Models.Task>

@{
    ViewData["Title"] = "Task List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Task</a>
</p>
<div class="form-group">
    <label for="categoryFilter">Filter by Category:</label>
    <select id="categoryFilter" class="form-control">
        <option value="">All</option>
        <option value="Work">Work</option>
        <option value="Personal">Personal</option>
        <option value="Shopping">Shopping</option>
        <option value="Others">Others</option>
    </select>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Priority)</th>
            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="taskList">
        @foreach (var item in Model)
        {
            <tr class="@(item.DueDate.HasValue && item.DueDate.Value < DateTime.Now && !item.IsCompleted ? "table-danger" : "")">
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Priority)</td>
                <td>@Html.DisplayFor(modelItem => item.DueDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>
                    <input type="checkbox" class="is-completed-checkbox" data-id="@item.Id" @(item.IsCompleted ? "checked" : "") />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.is-completed-checkbox').change(function () {
                var taskId = $(this).data('id');
                var isCompleted = $(this).is(':checked');

                $.ajax({
                    url: '@Url.Action("UpdateIsCompleted")',
                    type: 'POST',
                    data: {
                        id: taskId,
                        isCompleted: isCompleted
                    },
                    success: function (response) {
                        if (response.success) {
                            console.log('Task updated successfully');
                            location.reload();
                        } else {
                            console.log('Failed to update task');
                        }
                    },
                    error: function () {
                        console.log('Error updating task');
                    }
                });
            });

            $('#categoryFilter').change(function () {
                var selectedCategory = $(this).val().toLowerCase();
                $('#taskList tr').each(function () {
                    var category = $(this).find('td:nth-child(5)').text().toLowerCase();
                    if (selectedCategory === "" || category === selectedCategory) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}